<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:screenOrientation="portrait"
    tools:context=".Menu" >

    <Button
        android:id="@+id/blogorefreshmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/butonlogorefresh" />

    <Button
        android:id="@+id/btwittermenu"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/buttontwitter" />

    <Button
        android:id="@+id/bvercitasmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pdrcitamenu"
        android:layout_below="@+id/pdrcitamenu"
        android:layout_marginTop="15dp"
        android:background="@drawable/butonverc"
        android:textColor="@color/textwhite" />

    <Button
        android:id="@+id/bpedirpresmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bvercitasmenu"
        android:layout_below="@+id/bvercitasmenu"
        android:layout_marginTop="12dp"
        android:background="@drawable/butonpedirpres" />

    <Button
        android:id="@+id/bfacebookmenu"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/btwittermenu"
        android:background="@drawable/buttonfacebook" />

    <Button
        android:id="@+id/byoutubemenu"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btwittermenu"
        android:layout_alignBottom="@+id/btwittermenu"
        android:layout_marginLeft="43dp"
        android:layout_toRightOf="@+id/bfacebookmenu"
        android:background="@drawable/buttonyoutube" />

    <Button
        android:id="@+id/bemergenciamenu"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btwittermenu"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="18dp"
        android:background="@drawable/buttonemergencia" />

    <Button
        android:id="@+id/pdrcitamenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blogorefreshmenu"
        android:layout_marginTop="67dp"
        android:layout_toRightOf="@+id/bemergenciamenu"
        android:background="@drawable/butonpedirc"
        android:textColor="@color/textwhite"
        android:typeface="sans" />

</RelativeLayout>