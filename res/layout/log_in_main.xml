<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/log_in_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/text_login_username"
        android:layout_width="@dimen/log_in_widh"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="@string/log_in_username_hint"
        android:inputType="textPersonName"
        android:textSize="@dimen/log_in" >
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/text_login_passw"
        android:layout_width="@dimen/log_in_widh"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="@string/log_in_passw_hint"
        android:inputType="textPassword"
        android:textSize="@dimen/log_in" />

    <TextView
        android:id="@+id/button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/buton_yellow"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/log_in"
        android:textColor="@color/text_white"
        android:textSize="@dimen/big_oval_buttons" />

</LinearLayout>