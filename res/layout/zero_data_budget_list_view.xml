<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_budget_zero_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true" 
  >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/zero_data_image_margin_top"
        android:src="@drawable/shape_circle_blue" />

    <TextView
        android:id="@+id/textView_budget_zero_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/zero_data_text_margin_bottom"
        android:text="@string/budget_zero_data"
        android:textColor="@color/text_white"
        android:textSize="@dimen/zero_data_text" />

</RelativeLayout>