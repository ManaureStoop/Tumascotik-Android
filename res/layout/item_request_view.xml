<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/request_view_layout_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/request_view_layout_margin_left"
        android:layout_toRightOf="@+id/imageView_request_view_petavatar"
        android:background="@color/background_gray"
        android:orientation="vertical"
        android:padding="@dimen/general_padding_small" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/request_view_layout_inner_margin_top"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/textView_request_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/request_view_title"
                android:textColor="@color/black"
                android:textSize="@dimen/request_item_title" />

            <TextView
                android:id="@+id/textView_request_view_title_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/request_view_layout_margin_left"
                android:ellipsize="marquee"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:freezesText="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="BaÃ±o"
                android:textSize="@dimen/request_item_title" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/request_view_layout_inner_margin_top"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/textView_request_view_title_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/request_view_day"
                android:textSize="@dimen/request_items" />

            <TextView
                android:id="@+id/textView_request_view_title_day_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/request_view_layout_margin_left"
                android:text="TextView"
                android:textSize="@dimen/request_items" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/request_view_layout_inner_margin_top"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/textView_request_view_title_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/request_view_time"
                android:textSize="@dimen/request_items" />

            <TextView
                android:id="@+id/textView_request_view_title_time_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/request_view_layout_margin_left"
                android:text="TextView"
                android:textSize="@dimen/request_items" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView_request_view_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/request_view_layout_inner_margin_top"
            android:text="PENDINNNG"
            android:textColor="@color/request_status_pending"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView_request_view_petavatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView_request_view_petname"
        android:layout_alignTop="@+id/linearLayout1"
        android:layout_marginLeft="@dimen/request_view_layout_margin_left"
        android:src="@drawable/ic_mini_gato" />

    <TextView
        android:id="@+id/textView_request_view_petname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearLayout1"
        android:layout_alignParentLeft="true"
        android:background="@drawable/label_pet_name_appointment"
        android:gravity="center"
        android:text="Milou"
        android:textSize="@dimen/pet_names_gray_bckg" />

</RelativeLayout>