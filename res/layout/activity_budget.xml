<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linListViews"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:background="@drawable/background"
    android:orientation="vertical"
    android:screenOrientation="portrait" >

    <ListView
        android:id="@+id/listpresp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

    </ListView>

    <TextView
        android:id="@+id/txttotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textview_budget_total_title"
        android:background="@drawable/ic_yellow_button"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:text="0 Bs"
        android:textColor="@color/text_white"
        android:textSize="@dimen/big_oval_buttons" />

    <TextView
        android:id="@+id/textview_budget_total_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
    
        android:layout_below="@+id/listpresp"
        android:layout_marginRight="30dp"
        android:text="@string/budget_total_title"
        android:textColor="@color/text_blue"
        android:textSize="@dimen/blue_text" />

    <ImageView
        android:id="@+id/bhacerpedidopresp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textview_budget_total_title"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_foward" />

    <ImageView
        android:id="@+id/bdeleteallpresp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bhacerpedidopresp"
        android:layout_marginRight="17dp"
        android:layout_toLeftOf="@+id/txttotal"
        android:src="@drawable/ic_cancel" />

    <ImageView
        android:id="@+id/bagregpresp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bdeleteallpresp"
        android:layout_below="@+id/textview_budget_total_title"
        android:src="@drawable/ic_add" />

</RelativeLayout>