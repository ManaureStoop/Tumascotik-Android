<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/bcancpedirc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/general_margin_bottom"
        android:layout_marginLeft="@dimen/general_margin_bottom"
        android:clickable="true"
        android:src="@drawable/buton_cancel" />

    <ImageView
        android:id="@+id/bsigpedirc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bcancpedirc"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/general_margin_bottom"
        android:clickable="true"
        android:src="@drawable/buton_foward" />

                <Button
                    android:id="@+id/toggleButton_setrequestdetails_isdelivetry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editText_setrequestdetails_comments"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/set_request_details_toggle_margin_top"
                    android:background="@drawable/ic_yellow_button_pressed"
                    android:text="@string/set_request_details_isDeivery_title_negative"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/big_oval_buttons" />

                <Button
                    android:id="@+id/button_set_requestdetails_motive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/set_request_details_motive_margin_top"
                    android:background="@drawable/buton_yellow"
                    android:text="@string/set_request_details_motive_title"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/big_oval_buttons" />

                <TextView
                    android:id="@+id/text_motive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button_set_requestdetails_motive"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/set_request_details_elements_margin"
                    android:text="@string/set_request_details_motive"
                    android:textColor="@color/text_edit_profiles"
                    android:singleLine="true"
                    android:textSize="@dimen/user_edit_text" />

                <Button
                    android:id="@+id/button_setrequestdetails_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@+id/editText_setrequestdetails_comments"
                    android:layout_marginBottom="@dimen/set_request_details_elements_margin"
                    android:background="@drawable/buton_yellow"
                    android:text="@string/set_request_details_comments_title"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/big_oval_buttons" />

                <EditText
                    android:id="@+id/editText_setrequestdetails_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:ems="10" >

                    <requestFocus />
                </EditText>

</RelativeLayout>