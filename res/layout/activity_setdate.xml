<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@drawable/fondo"
    android:screenOrientation="portrait" >

    <Button
        android:id="@+id/bsigsetd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bcancsetd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Siguiente" />

    <Button
        android:id="@+id/bcancsetd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Cancelar" />

    <TextView
        android:id="@+id/txtfechasetd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bfechasetd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/main_date" />

    <Button
        android:id="@+id/bhorasetd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bfechasetd"
        android:layout_alignRight="@+id/bfechasetd"
        android:layout_below="@+id/txtfechasetd"
        android:layout_marginTop="54dp"
        android:background="@color/buttonviolet"
        android:text="Hora"
        android:textColor="@color/textwhite"
        android:width="100dp" />

    <TextView
        android:id="@+id/txthorasetd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bhorasetd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/main_porfelija" />

    <TextView
        android:id="@+id/txtalertasetd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txthorasetd"
        android:layout_marginTop="24dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/rojoalerta" />

    <Button
        android:id="@+id/bfechasetd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="87dp"
        android:background="@color/buttonviolet"
        android:text="@string/button_fecha"
        android:textColor="@color/textwhite"
        android:width="150dp" />

</RelativeLayout>